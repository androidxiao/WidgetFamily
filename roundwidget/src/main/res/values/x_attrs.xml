    <attr name="x_enableColor" format="color"/>

    <attr name="x_gradientOrientation" format="enum">
        <!-- 从顶部到底部绘制渐变 -->
        <enum name="TOP_BOTTOM" value="0"/>
        <!-- 从右上角到左下角的渐变 -->
        <enum name="TR_BL" value="1"/>
