<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:state="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

         <kotyox.statedrawable.XStateImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:clickable="true"
             state:x_statePressed="@mipmap/cb_sel"
             state:x_stateEnabled="@mipmap/cb_unsel"/>

        <kotyox.statedrawable.XStateCheckbox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:x_statePressed="@mipmap/cb_sel"
            app:x_stateCheck="@mipmap/cb_sel"
            android:text="同意本协议"
            android:drawablePadding="10dp"
            android:gravity="center"
            app:x_stateDirection="top"
            app:x_statePressedC="@color/c_800736"
            app:x_stateEnabledC="@color/c_1aad19"
            app:x_stateCheckC="@color/c_c1c1c1"
            app:x_stateUnCheck="@mipmap/cb_unsel"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="64dp"
            android:background="@color/colorAccent"
            android:button="@null"
            android:drawableTop="@android:drawable/ic_menu_add"
            android:gravity="center"
            android:text="好吃"
            />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- drawableLeft 与 drawablePadding 配合使用 -->
            <com.widget.family.DrawableLeftCenterView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableLeft="@drawable/selector_cb"
                android:drawablePadding="0dp"
                android:text="Delete"/>


            <com.widget.family.DrawableLeftCenterView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableLeft="@drawable/selector_cb"
                android:drawablePadding="10dp"
                android:text="Delete"/>

            <!-- 设置 drawableRight 要配合 gravity 和 paddingRight 同时要将 drawableSize=-1dp -->
            <com.widget.family.DrawableLeftCenterView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:button="@null"
                android:gravity="center"
                android:drawableRight="@android:drawable/ic_menu_add"
                android:paddingRight="20dp"
                android:text="Delete"
                android:visibility="gone"
                app:drawableSize="-1dp"
                />


            <com.widget.family.DrawableLeftCenterView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableLeft="@drawable/selector_cb"
                android:drawablePadding="30dp"
                android:text="Delete"/>


        </RadioGroup>

        <kotyox.widget.XRoundButton
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_margin="@dimen/d_16"
            android:gravity="center"
            android:text="@string/s_sure"
            android:textSize="@dimen/s_18"
            app:x_enableColor="@color/c_1aad19"
            app:x_fontEnableColor="@color/c_ffffff"
            app:x_pressColor="@color/c_179c16"
            app:x_radius="@dimen/d_5"/>

        <kotyox.widget.XRoundEditText
            android:layout_width="200dp"
            android:layout_height="30dp"
            app:x_borderColor="@color/colorAccent"
            app:x_borderWidth="1dp"
            app:x_radius="4dp"/>
    </LinearLayout>
</ScrollView>